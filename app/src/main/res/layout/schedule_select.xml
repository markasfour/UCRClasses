<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:text="Add in schedule..."
            android:textSize="24dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/schedule1Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" Schedule 1 "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/schedule2Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" Schedule 2 "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/schedule3Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" Schedule 3 "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/scheduleCancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" Cancel "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    </TableRow>

</TableLayout>